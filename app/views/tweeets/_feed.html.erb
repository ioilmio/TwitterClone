<div class="column is-half">
  <% if user_signed_in? %>
    <article class="media box">
      <figure class="media-left">
        <p class="image is-64x64">
          <%= user_image %>
        </p>
      </figure>
      <div class="media-content">
        <%= render "tweeets/form"%>
      </div>
    </article>
  <%end%>
  <% @tweeets.each do |tweeet| %>
    <div class="box">
      <article class="media">
        <div class="media-left">
          <figure class="image is-64x64">
            <%= user_image %>
          </figure>
        </div>
        <div class="media-content">
          <div class="content">
            <% if user_signed_in? %>
              <strong><%= tweeet.user.try(:name)  %></strong><br />
              <small><%= tweeet.user.try(:username) %></small><br />
            <%end%>
            <marquee><%= tweeet.tweeet %></marquee>
          </div>
          <% if user_signed_in? %>
            <nav class="level">
              <div class="level-left is-mobile">
                <%= link_to tweeets_path, class: "level-item" do%>
                  <span class="icon"><i class="fas fa-link" aria-hidden="true"></i></span>
                <%end%>
              </div>
            </nav>
          <%end%>
        </div>
      </article>
    </div>
  <%end%>
</div>
