<div class="column is-half">
  <% if user_signed_in? %>
    <article class="media box">
      <figure class="media-left">
        <p class="image is-64x64">
          <%= gravatar_image_tag(current_user.try(:email), size: 64, alt: current_user.try(:name)) %>            
        </p>
      </figure>
      <div class="media-content">
        <%= render "tweeets/form"%>
      </div>
    </article>
  <%end%>
  <% @tweeets.each do |tweeet| %>
    <div class="box">
      <article class="media">
        <div class="media-left">
          <figure class="image is-64x64">
            <%= gravatar_image_tag(current_user.try(:email), size: 64, alt: current_user.try(:name)) %>                
          </figure>
        </div>

        <div class="media-content">
          <div class="content">
            <% if user_signed_in? %>

            <strong><%= tweeet.user.try(:name) %></strong><br />
            <small><%= tweeet.user.try(:username) %></small><br />
              <%end%>
            <p><%= tweeet.tweeet%></p>
          </div>
            <% if user_signed_in? %>
          <nav class="level">
            <div class="level-left is-mobile">
              <%= link_to tweeet, class: "level-item" do%>
                <span class="icon"><i class="fas fa-link" aria-hidden="true"></i></span>
              <%end%>
              <%= link_to edit_tweeet_path(tweeet), class: "level-item" do %>
                <span class="icon"><i class="fas fa-pencil-alt" aria-hidden="true"></i></span>
              <%end%>
              <%= link_to tweeet, method: :delete, data: {confirm: "Are you sure you want to delete this tweet?"} do %>
                <span class="icon"><i class="fas fa-trash" aria-hidden="true"></i></span>
              <%end%>
            </div>
          </nav>
              <%end%>
        </div>
      </article>
    </div>
  <%end%>
</div>
